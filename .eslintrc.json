{
  "extends": [
    "next/core-web-vitals",
    "prettier"
  ],
  "rules": {
    "semi": 2,
    "indent": [
      "error",
      2
    ],
    "quotes": [
      "error",
      "single",
      "double",
      {
        "allowTemplateLiterals": true
      }
    ],
    "react/no-unescaped-entities": "off"
  }
}